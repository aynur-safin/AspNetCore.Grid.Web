@model IQueryable<Person>

@{
    ViewBag.Title = "Grid data sorting";
}

<div class="widget example">
    <div class="widget-header">
        <div class="fa fa-bars"></div>
        <span>Preview</span>
    </div>
    <div class="widget-content">
        @(Html
            .Grid(Model)
            .Build(columns =>
            {
                columns.Add(model => model.Name).Sortable(true);
                columns.Add(model => model.Surname).Sortable(false);
                columns.Add(model => model.MaritalStatus);

                columns.Add(model => model.Age).Sortable(GridSortOrder.Desc);
                columns.Add(model => model.Birthday).Formatted("{0:d}");
                columns.Add(model => model.IsWorking);
            })
            .Sortable()
        )
    </div>
</div>

<div class="widget code">
    <div class="widget-header">
        <div class="fa fa-code"></div>
        <span>View</span>
    </div>
    <div class="widget-content">
<pre>
