@{
    ViewBag.Title = "MVC.Grid installation";
}

<div class="widget docs">
    <div class="widget-header">
        <div class="fa fa-info"></div>
        <span>Installation steps</span>
        <div class="widget-buttons">
            <span class="fa fa-minus content-toggle"></span>
        </div>
    </div>
    <div class="widget-content">
        <p>
            Install MVC.Grid package from nuget.
        </p>
        <pre>> Install-Package NonFactors.Grid.Mvc6</pre>
        <p>
            Include grid partial views to your shared views folder, they can be found at:
        </p>
        <div class="row">
            <div class="col">
                <pre><b>Windows:</b> %UserProfile%\.nuget\packages\NonFactors.Grid.Mvc6\{version}\content\Views\</pre>
            </div>
            <div class="col">
                <pre><b>Linux/Mac:</b> ~/.nuget/packages/NonFactors.Grid.Mvc6/{version}/content/Views/</pre>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <p>MVC views application</p>
                <pre>
&lt;Project name&gt;
    Views
        Shared
            <b>MvcGrid
                _Grid.cshtml
                _Pager.cshtml</b></pre>
            </div>
            <div class="col">
                <p>Razor pages application</p>
                <pre>
&lt;Project name&gt;
    Pages
        <b>MvcGrid
            _Grid.cshtml
            _Pager.cshtml</b>
                </pre>
            </div>
        </div>

            <p>
                Add grid extensions to known namespaces in _ViewImports.cshtml
            </p>
            <pre>@@using NonFactors.Mvc.Grid;</pre>
            <p>
                Include grid styling sheet to your project and your page, it can be found at:
            </p>
            <div class="row">
                <div class="col">
                    <pre><b>Windows:</b> %UserProfile%\.nuget\packages\NonFactors.Grid.Mvc6\{version}\content\Content\MvcGrid\</pre>
                </div>
                <div class="col">
                    <pre><b>Linux/Mac:</b> ~/.nuget/packages/NonFactors.Grid.Mvc6/{version}/content/Content/MvcGrid/</pre>
                </div>
            </div>
            <pre>
&lt;html&gt;
    &lt;head&gt;
        <b>&lt;link href="~/Content/MvcGrid/mvc-grid.css" rel="stylesheet"&gt;</b>
    &lt;/head&gt;
    &lt;body&gt;
        @@RenderBody()
    &lt;/body&gt;
&lt;/html&gt;</pre>
            <p>
                Include grid scripts to your project and your page, it can be found at.
            </p>
            <div class="row">
                <div class="col">
                    <pre><b>Windows:</b> %UserProfile%\.nuget\packages\NonFactors.Grid.Mvc6\{version}\content\Scripts\MvcGrid\</pre>
                </div>
                <div class="col">
                    <pre><b>Linux/Mac:</b> ~/.nuget/packages/NonFactors.Grid.Mvc6/{version}/content/Scripts/MvcGrid/</pre>
                </div>
            </div>
            <pre>
&lt;html&gt;
    &lt;head&gt;
        &lt;link href="~/Content/MvcGrid/mvc-grid.css" rel="stylesheet"&gt;
    &lt;/head&gt;
    &lt;body&gt;
        @@RenderBody()

        <b>&lt;script src="~/Scripts/MvcGrid/mvc-grid.js"&gt;&lt;/script&gt;</b>
    &lt;/body&gt;
&lt;/html&gt;</pre>
            <p>
                Initialize MVC.Grid instances after rendering grid html
            </p>
            <pre>
&lt;html&gt;
    &lt;head&gt;
        &lt;link href="~/Content/MvcGrid/mvc-grid.css" rel="stylesheet"&gt;
    &lt;/head&gt;
    &lt;body&gt;
        @@RenderBody()

        &lt;script src="~/Scripts/MvcGrid/mvc-grid.js"&gt;&lt;/script&gt;
        &lt;script&gt;
            <b>[].forEach.call(document.getElementsByClassName('mvc-grid'), function (element) {
                new MvcGrid(element);
            });</b>
        &lt;/script&gt;
    &lt;/body&gt;
&lt;/html&gt;
</pre>
    </div>
</div>
