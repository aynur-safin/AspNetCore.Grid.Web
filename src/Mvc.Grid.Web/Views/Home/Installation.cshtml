@{
    ViewBag.Title = "MVC.Grid installation";
}

<div class="docs content-block">
    <div class="widget">
        <div class="widget-header">
            <h1>
                <i class="fa fa-bars"></i>
                Installation steps
                <span class="widget-buttons">
                    <i class="content-toggle"></i>
                </span>
            </h1>
        </div>
        <div class="widget-content">
            <p>
                Install MVC.Grid package from nuget.
            </p>
            <pre>> Install-Package NonFactors.Grid.Mvc6</pre>
            <p>
                Included grid partial views to your Views/Shared folder, they can be found at ~/.nuget/packages/NonFactors.Grid.Mvc6/{version}/content.
            </p>
            <pre></pre>
            <p>
                Register mvc grid at start up
            </p>
            <pre>using NonFactors.Mvc.Grid;

services.AddMvcGrid();</pre>
            <p>
                Include grid styling sheet, they can be found at ~/.nuget/packages/NonFactors.Grid.Mvc6/{version}/content.
            </p>
            <pre>&lt;link href="~/Content/MvcGrid/mvc-grid.css" rel="stylesheet" /&gt;</pre>
            <p>
                Include grid scripts after jQuery scripts.
            </p>
            <pre>&lt;script src="~/Scripts/MvcGrid/mvc-grid.js" /&gt;</pre>
            <p>
                Initialize MVC.Grid instances after rendering grid html or at the end of the page.
            </p>
            <pre>$('.mvc-grid').mvcgrid();</pre>
        </div>
    </div>
</div>
